<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:paddingTop="8dp">

    <LinearLayout
        android:id="@+id/messageContentLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        android:background="@drawable/received_chat_bubble"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/messageContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:lineSpacingExtra="2dp"
            android:textColor="@color/colorPrimaryText"
            android:text="ciao"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/messageTimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceBody2"
        android:textColor="?android:attr/textColorSecondary"
        android:text="15:41"
        android:textSize="13sp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/messageContentLayout"
        app:layout_constraintStart_toEndOf="@+id/messageContentLayout"
        />
</androidx.constraintlayout.widget.ConstraintLayout>